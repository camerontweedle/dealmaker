<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Label</th>
      <th>Content</th>
      <th>Templates</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.label %></td>
        <td><%= question.content %></td>
        <td><%= question.templates.count %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path, { :class => ['btn-primary', 'btn']} %>
