<!DOCTYPE html>
<html>
  <head>
    <title>Dealmaker Clone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-light bg-primary text-white">
      <div class="container">
        <a href="<%= root_path %>" class="navbar-brand">Dealmaker</a>
        <ul id="nav-mobile" class="right navbar-nav">
          <li class="nav-item <%= current_page?(templates_path) || current_page?(root_path) ? 'active' : '' %>">
            <a class="nav-link" href="<%= templates_path %>">Templates</a>
          </li>
          <li class="nav-item <%= current_page?(questions_path) ? 'active' : '' %>">
            <a class="nav-link" href="<%= questions_path %>">Questions</a>
          </li>
        </ul>
      </div>
    </nav>
    
    <div class="container mt-3">
      <%= yield %>
    </div>
  </body>
</html>
