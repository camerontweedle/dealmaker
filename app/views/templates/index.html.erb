<p id="notice"><%= notice %></p>

<h1>Templates</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Version</th>
      <th>Questions</th>
      <th>Documents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= template.version %></td>
        <td><%= template.questions.count %></td>
        <td><%= link_to template.documents.count, template_documents_path(template) %></td>
        <td><%= link_to 'Edit', edit_template_path(template) %></td>
        <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Create Document', new_template_document_path(template), { :class => ['btn', 'btn-primary', 'btn-sm'] } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path, { :class => ['btn-primary', 'btn']} %>
